Subject: Chromium build configuration adds loongarch64 support

add loongarch64 support for build configuration
add loongarch64 support for breakpad, dav1d, libvpx, pfft in third_party

diff --git a/build/config/compiler/BUILD.gn b/build/config/compiler/BUILD.gn
index d40843b44f9ee81f026bf52e3f39c9475fe87ac3..f8417d6d923edb4d62d3366a0d41d8e9d87d704e 100644
--- a/build/config/compiler/BUILD.gn
+++ b/build/config/compiler/BUILD.gn
@@ -926,6 +926,12 @@ config("compiler_cpu_abi") {
         # Outline atomics crash on Exynos 9810. http://crbug.com/1272795
         cflags += [ "-mno-outline-atomics" ]
       }
+    } else if (current_cpu == "loong64") {
+      cflags += [ "-mcmodel=large" ]
+      if (is_clang && !is_android && !is_nacl && !is_fuchsia) {
+        cflags += [ "--target=loongarch64-linux-gnu" ]
+        ldflags += [ "--target=loongarch64-linux-gnu" ]
+      }
     } else if (current_cpu == "mipsel" && !is_nacl) {
       ldflags += [ "-Wl,--hash-style=sysv" ]
       if (custom_toolchain == "") {
